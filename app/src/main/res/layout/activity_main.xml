<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11E7E0E0"
    android:backgroundTint="#FFFAFF"
    android:foregroundTint="#A85959"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="68dp"
            android:layout_height="59dp"
            android:src="@drawable/play_store_512" />

        <EditText
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="drawable/ic_search_category_default"
            android:backgroundTint="#CCCCCC"
            android:drawableEnd="@android:drawable/ic_search_category_default"
            android:hint="¿Qué te gustaria pedir hoy?"
            android:paddingHorizontal="10dp"
            android:textColor="#333333"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="TE OFRECEMOS"
        android:textColor="#070101"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagencomi"
                android:layout_width="124dp"
                android:layout_height="60dp"
                android:src="@drawable/pollo" />

            <Button
                android:id="@+id/food"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#1D1919"
                android:text="COMIDAS"
                android:textColor="#FFFFFF"
                android:textSize="8sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iamgenbebi"
                android:layout_width="128dp"
                android:layout_height="60dp"
                android:src="@drawable/unka" />

            <Button
                android:id="@+id/drinks"
                android:layout_width="73dp"
                android:layout_height="29dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#100F0F"
                android:text="BEBIDAS"
                android:textColor="#EFEEEE"
                android:textSize="8sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="183dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/brasa"
            android:layout_width="140dp"
            android:layout_height="195dp"
            android:src="@drawable/brasa" />

        <ImageView
            android:id="@+id/papas"
            android:layout_width="wrap_content"
            android:layout_height="189dp"
            android:layout_weight="1"
            android:src="@drawable/papa" />

        <ImageView
            android:id="@+id/inka"
            android:layout_width="wrap_content"
            android:layout_height="181dp"
            android:layout_weight="1"
            android:src="@drawable/unka" />
    </LinearLayout>

    <Button
        android:id="@+id/mas"
        android:layout_width="105dp"
        android:layout_height="32dp"
        android:backgroundTint="#F6BF7B"
        android:drawableTint="#716161"
        android:foregroundTint="#EBE7E7"
        android:text="ver mas..."
        android:textSize="10sp"
        android:translationX="290dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="¡SUPER OFERTA!"
        android:textColor="#FF0000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="10dp">

        <LinearLayout
            android:id="@+id/oferta4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/oferta1"
                android:layout_width="168dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ofertas" />

            <ImageView
                android:id="@+id/oferta2"
                android:layout_width="158dp"
                android:layout_height="130dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/solo" />

            <ImageView
                android:id="@+id/oferta3"
                android:layout_width="134dp"
                android:layout_height="131dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/oferet" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="129dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/para" />

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/HOUSE"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:backgroundTint="#FFFFFF"
                android:src="@drawable/casa" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio"
                android:textColor="#000000"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="87dp"
                android:layout_height="29dp"
                android:backgroundTint="#FFFDFD"
                android:src="@drawable/mega" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Promociones"
                android:textColor="#000000"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/car"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:backgroundTint="#FBFBFB"
                android:src="@drawable/car" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Pedidos"
                android:textColor="#000000"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/PERFIL"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:backgroundTint="#FFFFFF"
                android:src="@drawable/icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Cuenta"
                android:textColor="#000000"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>