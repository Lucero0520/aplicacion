<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="62dp"
        android:layout_height="81dp"
        android:src="@drawable/pollito"
        android:translationX="180dp"
        android:translationY="20dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Detalles sobre tú Pedido"
        android:textColor="#1F1D1D"
        android:textSize="24sp"
        android:translationX="80dp"
        android:translationY="30dp" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="_______________________________________________________________"
        android:translationY="40dp" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="El repartidor esta en camino a su detino"
        android:textColor="#141313"
        android:textSize="20sp"
        android:translationX="35dp"
        android:translationY="60dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/ic_launcher_adaptive_fore"
        android:translationX="100dp"
        android:translationY="75dp" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="35 min"
        android:textSize="16sp"
        android:translationX="280dp"
        android:translationY="-40dp" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Aproximadamente"
        android:translationX="130dp"
        android:translationY="35dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="_______________________________________________________________"
        android:translationY="40dp" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="El repartidor llego a su detino"
        android:textColor="#101010"
        android:textSize="20sp"
        android:translationX="80dp"
        android:translationY="60dp" />

    <Button
        android:id="@+id/button_check"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="confirma si recibiste tu pedido"
        android:translationX="50dp"
        android:translationY="70dp" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="_______________________________________________________________"
        android:translationY="70dp" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Te gusto esta experiencia?"
        android:textColor="#2A2727"
        android:textSize="16sp"
        android:translationX="210dp"
        android:translationY="80dp" />

    <ImageButton
        android:id="@+id/Button_house_1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/casa"
        android:translationX="30dp"
        android:translationY="160dp" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Inicio"
        android:textColor="#1F1B1B"
        android:textSize="16sp"
        android:translationX="30dp"
        android:translationY="170dp" />

    <ImageButton
        android:id="@+id/Button_promo_1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/sonido"
        android:translationX="130dp"
        android:translationY="110dp" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Promociones"
        android:textColor="#262222"
        android:textSize="16sp"
        android:translationX="100dp"
        android:translationY="120dp" />

    <ImageButton
        android:id="@+id/button_car_1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/carrito"
        android:translationX="240dp"
        android:translationY="55dp" />

    <TextView
        android:id="@+id/textView35"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Pedidos"
        android:textColor="#1F1E1E"
        android:textSize="16sp"
        android:translationX="230dp"
        android:translationY="70dp" />

    <ImageButton
        android:id="@+id/Button_cuenta_1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/perfil"
        android:translationX="340dp"
        android:translationY="5dp" />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Cuenta"
        android:textColor="#100F0F"
        android:textSize="16sp"
        android:translationX="330dp"
        android:translationY="20dp" />

</LinearLayout>