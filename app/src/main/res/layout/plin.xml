<!-- res/layout/activity_pago_plin.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FFFFFF">

    <!-- Logo de Plin (puedes usar ImageView si tienes el logo) -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:contentDescription="Volver"
        android:src="@drawable/flecha" />
    <!-- Número de celular -->

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/plin1"
        tools:srcCompat="@drawable/plin1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        android:text="Ingresa tu celular Plin"
        android:textSize="18sp"
        android:translationY="45dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/circle"
        android:fontFamily="sans-serif-thin"
        android:hint="Ej: 987 654 321"
        android:inputType="phone"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:translationY="70dp" />

    <!-- Código de aprobación -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        android:text="Código de aprobación"
        android:textSize="18sp"
        android:translationY="70dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:weightSum="6">

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="1"
            android:layout_marginEnd="10dp"
            android:background="@drawable/circle"/>

        <!-- Repetir los demás 5 -->
        <EditText android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="50dp" android:inputType="number"
            android:gravity="center" android:maxLength="1"
            android:layout_marginEnd="10dp"
            android:background="@drawable/circle"/>
        <EditText android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="50dp" android:inputType="number"
            android:gravity="center" android:maxLength="1"
            android:layout_marginEnd="10dp"
            android:background="@drawable/circle"/>
        <EditText android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="50dp" android:inputType="number"
            android:gravity="center" android:maxLength="1"
            android:layout_marginEnd="10dp"
            android:background="@drawable/circle"/>
        <EditText android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="50dp" android:inputType="number"
            android:gravity="center" android:maxLength="1"
            android:layout_marginEnd="10dp"
            android:background="@drawable/circle"/>
        <EditText android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="50dp" android:inputType="number"
            android:gravity="center" android:maxLength="1"
            android:layout_marginEnd="10dp"
            android:background="@drawable/circle"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:text="Encuéntralo en el menú de Plin."
        android:textColor="#888888"
        android:textSize="14sp" />

    <!-- Botón pagar -->
    <Button
        android:id="@+id/Button_yape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/circle"
        android:text="Pagar  S/55"
        android:textAllCaps="false"
        android:textColor="#242020"
        android:textSize="18sp"
        android:translationY="80dp" />
</LinearLayout>