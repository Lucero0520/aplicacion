<!-- res/layout/activity_pago_plin.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="#FFFFFF">

    <!-- Logo de Plin (puedes usar ImageView si tienes el logo) -->

    <!-- Número de celular -->
    <TextView
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_gravity="center"
        android:background="@drawable/plin" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingresa tu celular Plin"
        android:textSize="16sp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Ej: 987 654 321"
        android:inputType="phone"
        android:background="@drawable/borde_clasico"
        android:padding="10dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <!-- Código de aprobación -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Código de aprobación"
        android:textSize="16sp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:weightSum="6">

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="1"
            android:background="@drawable/borde_clasico"/>

        <!-- Repetir los demás 5 -->
        <EditText android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="50dp" android:inputType="number"
            android:gravity="center" android:maxLength="1"
            android:background="@drawable/borde_clasico"/>
        <EditText android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="50dp" android:inputType="number"
            android:gravity="center" android:maxLength="1"
            android:background="@drawable/borde_clasico"/>
        <EditText android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="50dp" android:inputType="number"
            android:gravity="center" android:maxLength="1"
            android:background="@drawable/borde_clasico"/>
        <EditText android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="50dp" android:inputType="number"
            android:gravity="center" android:maxLength="1"
            android:background="@drawable/borde_clasico"/>
        <EditText android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="50dp" android:inputType="number"
            android:gravity="center" android:maxLength="1"
            android:background="@drawable/borde_clasico"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Encuéntralo en el menú de Plin."
        android:textSize="14sp"
        android:textColor="#888888"
        android:layout_marginTop="10dp"/>

    <!-- Botón pagar -->
    <Button
        android:id="@+id/btnPagar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pagar  S/138.48"
        android:textAllCaps="false"
        android:layout_marginTop="30dp"
        android:backgroundTint="#b83c2c"
        android:textColor="#FFFFFF"
        android:background="@drawable/borde_clasico"/>

</LinearLayout>
